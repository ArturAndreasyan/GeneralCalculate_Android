<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <TextView
       android:id="@+id/result_id"
       android:layout_width="406dp"
       android:layout_height="282dp"
       android:background="@color/white"
       android:text="\n\n\n\n0"
       android:textAlignment="viewEnd"
       android:textAppearance="@style/TextAppearance.AppCompat.Display2"
       android:textColor="@color/black"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/del"
       android:layout_width="139dp"
       android:layout_height="60dp"
       android:layout_marginTop="284dp"
       android:backgroundTint="#8BCAE6"
       android:text="DEL"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/result_id" />

   <Button
       android:id="@+id/answer"
       android:layout_width="270dp"
       android:layout_height="60dp"
       android:layout_marginStart="140dp"
       android:layout_marginTop="284dp"
       android:backgroundTint="#8BCAE6"
       android:text="ANSWER"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/result_id" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintEnd_toEndOf="@id/answer"
       app:layout_constraintStart_toStartOf="@id/del"
       app:layout_constraintTop_toBottomOf="@+id/answer">

      <LinearLayout
          android:id="@+id/largeLabel"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">

         <Button
             android:id="@+id/one"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="1" />

         <Button
             android:id="@+id/two"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="2" />

         <Button
             android:id="@+id/three"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="3" />

         <Button
             android:id="@+id/drop"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#009688"
             android:text="/" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">

         <Button
             android:id="@+id/four"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="4" />

         <Button
             android:id="@+id/five"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="5" />

         <Button
             android:id="@+id/six"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:textColor="@color/white"
             android:backgroundTint="#2C4C9E"
             tools:text="6" />

         <Button
             android:id="@+id/minus"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#009688"
             android:text="-" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">

         <Button
             android:id="@+id/seven"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="7" />

         <Button
             android:id="@+id/eight"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="8" />

         <Button
             android:id="@+id/nine"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             tools:text="9" />

         <Button
             android:id="@+id/x"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#009688"
             android:text="X" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="horizontal">

         <Button
             android:id="@+id/doub"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="." />

         <Button
             android:id="@+id/zero"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#2C4C9E"
             android:text="0" />

         <Button
             android:id="@+id/procent"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#009688"
             tools:text="%" />

         <Button
             android:id="@+id/plus"
             android:layout_width="50dp"
             android:layout_height="60dp"
             android:layout_margin="1dp"
             android:layout_weight="1"
             android:backgroundTint="#009688"
             android:text="+" />

      </LinearLayout>


      >
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>